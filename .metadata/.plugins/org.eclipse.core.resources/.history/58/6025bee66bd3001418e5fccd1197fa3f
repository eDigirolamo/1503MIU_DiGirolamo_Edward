// intital buttons
var logButton = Ti.UI.createButton({
	backgroundColor:"#00796B",
	color: "#fff",
	title: "Login",
	top:355,
	left: margin * 3,
	right: margin *3,
	height:35,
	borderRadius: 5
	});

